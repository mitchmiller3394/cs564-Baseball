<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <div class="card card-bg shadow">
        <div class="card-body">
            <h3 class="card-title mb-4">Team Salary Data</h3>
            <% if (salary && salary.length) { %>
                <div class="table-responsive">
                    <table class="table table-dark table-striped table-bordered align-middle">
                        <thead>
                            <tr>
                                <th>Team ID</th>
                                <th>Year</th>
                                <th>Salary</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% salary[0][0].forEach(row => { %>
                                <tr>
                                    <td><%= row.team_id %></td>
                                    <td><%= row.year %></td>
                                    <td><%= row.total_salary %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-warning">No salary stats available for this team.</div>
            <% } %>
            <a href="/team" class="btn btn-secondary mt-3">Back</a>
        </div>
    </div>
</div>