<% layout('layouts/boilerplate') %>

    <div class="container min-vh-100 d-flex justify-content-center align-items-center">
        <div class="card shadow card-bg w-100" style="max-width: 400px;">
            <div class="card-body card-bg">
                <div class="card shadow card-bg">
                    <div class="card-body card-bg">
                        <h5 class="card-title text-center">Register</h5>
                        <form action="/register" method="POST" class="needs-validation" novalidate>
                            <div class="mb-2">
                                <label class="form-label mb-1" for="username">Username</label>
                                <input class="form-control" type="text" id="username" name="username" required>
                            </div>
                            <div class="mb-2">
                                <label class="form-label mb-1" for="email">Email</label>
                                <input class="form-control" type="email" id="email" name="email" required>
                            </div>
                            <div class="mb-2">
                                <label class="form-label mb-1" for="password">Password</label>
                                <input class="form-control" type="password" id="password" name="password" required>
                            </div>
                            <div class="d-grid">
                                <button class="btn btn-success">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>