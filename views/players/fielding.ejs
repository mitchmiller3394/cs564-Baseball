<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <div class="card card-bg shadow">
        <div class="card-body">
            <h3 class="card-title mb-4">Fielding Stats</h3>
            <% if (fielding && fielding.length && fielding[0].length) { %>
                <div class="table-responsive">
                    <table class="table table-dark table-striped table-bordered align-middle">
                        <thead>
                            <tr>
                                <th>Year</th>
                                <th>Team</th>
                                <th>Position</th>
                                <th>Games</th>
                                <th>Games Started</th>
                                <th>Innings Played</th>
                                <th>Putouts</th>
                                <th>Assists</th>
                                <th>Errors</th>
                                <th>Double Plays</th>
                                <!-- Add more columns as needed -->
                            </tr>
                        </thead>
                        <tbody>
                            <% debugger; %>
                            <% fielding[0][0].forEach(row => { %>
                                <tr>
                                    <td><%= row.year %></td>
                                    <td><%= row.team %></td>
                                    <td><%= row.pos %></td>
                                    <td><%= row.g %></td>
                                    <td><%= row.gs %></td>
                                    <td><%= row.inn_outs %></td>
                                    <td><%= row.po %></td>
                                    <td><%= row.a %></td>
                                    <td><%= row.e %></td>
                                    <td><%= row.dp %></td>
                                    <!-- Add more columns as needed -->
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-warning">No fielding stats available for this player.</div>
            <% } %>
            <a href="/player" class="btn btn-secondary mt-3">Back</a>
        </div>
    </div>
</div>