<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <div class="card card-bg shadow">
        <div class="card-body">
            <h3 class="card-title mb-4">Salary Information</h3>
            <% if (salary && salary.length && salary[0].length) { %>
                <div class="table-responsive">
                    <table class="table table-dark table-striped table-bordered align-middle">
                        <thead>
                            <tr>
                                <th>Year</th>
                                <th>Team</th>
                                <th>Salary</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% salary[0].forEach((row, idx) => { %>
                                <tr id="row-<%= idx %>">
                                    <form action="/player/salary/update" method="POST" class="salary-edit-form">
                                        <td>
                                            <span class="salary-view"><%= row.year %></span>
                                            <input type="number" name="year" class="form-control form-control-sm salary-edit d-none" value="<%= row.year %>" min="1800" max="2025" required>
                                        </td>
                                        <td>
                                            <span class="salary-view"><%= row.team_id %></span>
                                            <input type="text" name="team_id" class="form-control form-control-sm salary-edit d-none" value="<%= row.team_id %>" required>
                                        </td>
                                        <td>
                                            <span class="salary-view"><%= row.salary %></span>
                                            <input type="number" name="salary" class="form-control form-control-sm salary-edit d-none" value="<%= row.salary %>" min="0" required>
                                        </td>
                                        <td>
                                            <input type="hidden" name="player_id" value="<%= row.player_id %>">
                                            <!-- "error" on the following lines for the ejs in the onclick field are fine. It works and is correct syntax -->
                                            <button type="button" class="btn btn-sm btn-outline-primary salary-view" title="Edit" onclick="enableEdit(<%= idx %>)">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button type="submit" class="btn btn-sm btn-success salary-edit d-none" title="Save">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                            <button type="button" class="btn btn-sm btn-secondary salary-edit d-none" title="Cancel" onclick="cancelEdit(<%= idx %>)">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </td>
                                    </form>
                                    <td>
                                        <form action="/player/salary/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this salary entry?');">
                                            <input type="hidden" name="player_id" value="<%= row.player_id %>">
                                            <input type="hidden" name="year" value="<%= row.year %>">
                                            <input type="hidden" name="team_id" value="<%= row.team_id %>">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                            <!-- Insert row for new salary entry -->
                            <tr>
                                <form action="/player/salary/insert" method="POST">
                                    <td>
                                        <input type="number" name="year" class="form-control form-control-sm" min="1800" max="2025" required>
                                    </td>
                                    <td>
                                        <input type="text" name="team_id" class="form-control form-control-sm" required>
                                    </td>
                                    <td>
                                        <input type="number" name="salary" class="form-control form-control-sm" min="0" required>
                                    </td>
                                    <td>
                                        <input type="hidden" name="player_id" value="<%= salary[0][0].player_id %>">
                                        <button type="submit" class="btn btn-sm btn-success" title="Insert">
                                            <i class="bi bi-plus-circle"></i>
                                        </button>
                                    </td>
                                </form>
                            </tr>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-warning">No Salary info available for this player.</div>
            <% } %>
            <a href="/player" class="btn btn-secondary mt-3">Back</a>
        </div>
    </div>
</div>

<script>
function enableEdit(idx) {
    const row = document.getElementById(`row-${idx}`);
    row.querySelectorAll('.salary-view').forEach(el => el.classList.add('d-none'));
    row.querySelectorAll('.salary-edit').forEach(el => el.classList.remove('d-none'));
}
function cancelEdit(idx) {
    const row = document.getElementById(`row-${idx}`);
    row.querySelectorAll('.salary-edit').forEach(el => el.classList.add('d-none'));
    row.querySelectorAll('.salary-view').forEach(el => el.classList.remove('d-none'));
}
</script>
<!-- Bootstrap Icons CDN if not already included -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">