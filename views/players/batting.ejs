<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <div class="card card-bg shadow">
        <div class="card-body">
            <h3 class="card-title mb-4">Batting Stats</h3>
            <% if (batting && batting.length && batting[0].length) { %>
                <div class="table-responsive">
                    <table class="table table-dark table-striped table-bordered align-middle">
                        <thead>
                            <tr>
                                <th>Year</th>
                                <th>Team</th>
                                <th>Games</th>
                                <th>At Bats</th>
                                <th>Runs</th>
                                <th>Hits</th>
                                <th>Doubles</th>
                                <th>Triples</th>
                                <th>Home Runs</th>
                                <th>RBIs</th>
                                <th>Stolen Bases</th>
                                <th>Caught Stealing</th>
                                <!-- Add more columns as needed -->
                            </tr>
                        </thead>
                        <tbody>
                            <% debugger; %>
                            <% batting[0][0].forEach(row => { %>
                                <tr>
                                    <td><%= row.year %></td>
                                    <td><%= row.team %></td>
                                    <td><%= row.g %></td>
                                    <td><%= row.ab %></td>
                                    <td><%= row.r %></td>
                                    <td><%= row.h %></td>
                                    <td><%= row.double %></td>
                                    <td><%= row.triple %></td>
                                    <td><%= row.hr %></td>
                                    <td><%= row.rbi %></td>
                                    <td><%= row.sb %></td>
                                    <td><%= row.cs %></td>
                                    <!-- Add more columns as needed -->
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-warning">No batting stats available for this player.</div>
            <% } %>
            <a href="/player" class="btn btn-secondary mt-3">Back</a>
        </div>
    </div>
</div>