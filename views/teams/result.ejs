
<%
// Map MySQL column names to user-friendly names for different view types
let columnMap = {};
let title = '';

if (typeof viewType !== 'undefined' && viewType === 'playersOnTeam') {
    columnMap = {
        name_first: 'First Name',
        name_last: 'Last Name'
    };
    title = typeof message !== 'undefined' ? message : 'Players on Team';
} else if (typeof viewType !== 'undefined' && viewType === 'insertTeamWins') {
    title = 'Insert Team Wins';
} else {
    // Default stadium view
    columnMap = {
        stadiumid: null, // Hide this column if present
        park_name: 'Stadium Name',
        teams: 'Number of Teams',
        teams_hosted: 'Names of Teams',
    };
    title = 'Top Stadiums by Number of Teams Hosted';
}

const displayColumns = Object.keys(results[0] || {}).filter(key => columnMap[key] !== null && columnMap[key] !== undefined);
%>
<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <div class="card card-bg shadow">
        <div class="card-body">
            <h3 class="card-title mb-4"><%= title %></h3>
            
            <% if (typeof viewType !== 'undefined' && viewType === 'insertTeamWins') { %>
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-success"><%= message %></div>
                <% } %>
            <% } else { %>
                <% if (results && results.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-dark table-striped table-bordered align-middle">
                            <thead>
                                <tr>
                                    <% displayColumns.forEach(function(key) { %>
                                        <th><%= columnMap[key] || key %></th>
                                    <% }); %>
                                </tr>
                            </thead>
                            <tbody>
                                <% results.forEach(function(row) { %>
                                    <tr>
                                        <% displayColumns.forEach(function(key) { %>
                                            <td><%= row[key] %></td>
                                        <% }); %>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <% if (typeof viewType !== 'undefined' && viewType === 'playersOnTeam') { %>
                        <div class="alert alert-warning">No players found for the selected team and year.</div>
                    <% } else { %>
                        <div class="alert alert-warning">No stadium data available.</div>
                    <% } %>
                <% } %>
            <% } %>
            <a href="/team" class="btn btn-primary mt-3">Back</a>
        </div>
    </div>
</div>
</div>
