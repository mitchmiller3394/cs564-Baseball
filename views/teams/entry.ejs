<% layout('layouts/boilerplate') %>

<div class="container min-vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow card-bg w-100" style="max-width: 500px;">
        <div class="card-body card-bg">
            <h5 class="card-title text-center mb-3">Top Stadiums by Number of Teams Hosted</h5>
            <form action="/team/top-stadiums" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label class="form-label mb-1" for="numStadiums">Number of Stadiums to Show</label>
                    <input class="form-control" type="number" id="numStadiums" name="numStadiums" min="1" required>
                </div>
                <div class="d-grid mt-3">
                    <button class="btn btn-success">Show Me!</button>
                </div>
            </form>
        </div>
    </div>
</div>
