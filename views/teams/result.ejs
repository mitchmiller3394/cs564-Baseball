
<%
// Map MySQL column names to user-friendly names
const columnMap = {
    stadiumid: null, // Hide this column if present
    park_name: 'Stadium Name',
    teams: 'Number of Teams',
    teams_hosted: 'Names of Teams',
};
const displayColumns = Object.keys(results[0] || {}).filter(key => columnMap[key] !== null && columnMap[key] !== undefined);
%>
<% layout('layouts/boilerplate') %>
<div class="container mt-5">
    <div class="card card-bg shadow">
        <div class="card-body">
            <% if (typeof viewType !== 'undefined' && viewType === 'insertTeamWins') { %>
                <h3 class="card-title mb-4">Insert Team Wins</h3>
                <% if (typeof message !== 'undefined' && message) { %>
                    <div class="alert alert-success"><%= message %></div>
                <% } %>
            <% } else { %>
                <h3 class="card-title mb-4">Top Stadiums by Number of Teams Hosted</h3>
                <% if (results && results.length) { %>
                    <div class="table-responsive">
                        <table class="table table-dark table-striped table-bordered align-middle">
                            <thead>
                                <tr>
                                    <% displayColumns.forEach(function(key) { %>
                                        <th><%= columnMap[key] || key %></th>
                                    <% }); %>
                                </tr>
                            </thead>
                            <tbody>
                                <% results.forEach(function(row) { %>
                                    <tr>
                                        <% displayColumns.forEach(function(key) { %>
                                            <td><%= row[key] %></td>
                                        <% }); %>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert alert-warning">No stadium data available.</div>
                <% } %>
            <% } %>
            <a href="/team" class="btn btn-primary mt-3">Back</a>
        </div>
    </div>
</div>
